<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
    
    <navigation-rule>
	<from-view-id>/home.jsp</from-view-id>
	<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/welcome.jsp</to-view-id>
			<redirect />
	</navigation-case>
	
	</navigation-rule>
    <navigation-rule>
		<display-name>login</display-name>
		<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/home.jsp</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>fail</from-outcome>
			<to-view-id>/error.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
  
    <validator>
    	<display-name>org.java.app.validator.LoginValidator</display-name>
    	<validator-id>org.java.app.validator.LoginValidator</validator-id>
    	<validator-class>org.java.app.validator.LoginValidator</validator-class>
    </validator>
    
    <managed-bean>
		<managed-bean-name>quizSubmitService</managed-bean-name>
		<managed-bean-class>org.java.app.service.QuizSubmitService</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
	<from-view-id>/quiz.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/quizanalysis.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<managed-bean>
		<managed-bean-name>quizCreateService</managed-bean-name>
		<managed-bean-class>org.java.app.service.QuizCreateService</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	
	<navigation-rule>
	<from-view-id>/createAssignment.jsp</from-view-id>
	<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/studentAssignment.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
	<from-view-id>/analysis.jsp</from-view-id>
	<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/analysisReport.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
</faces-config>
